<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kaishengit.mapper.MovieMapper">

    <select id="find"  resultType="movie">
        SELECT * FROM movie
        <if test="title != null and title != ''">
            WHERE title like #{title}
        </if>
    </select>

    <select id="findByParam" resultType="movie" parameterType="map">
        SELECT * FROM movie
        <trim prefix="WHERE" prefixOverrides="and | or">
            <if test="title != null and title != ''">
                title like #{title}
            </if>
            <if test="director != null and director != ''">
                AND director like #{director}
            </if>
        </trim>
        <!--<where>
            <if test="title != null and title != ''">
                title like #{title}
            </if>
            <if test="director != null and director != ''">
                AND director like #{director}
            </if>
        </where>-->
    </select>

    <select id="findByIdList" resultType="movie">
        SELECT * FROM movie
        WHERE id IN
        <foreach collection="idList" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </select>

</mapper>
